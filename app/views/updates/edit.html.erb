<div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8">
  <h1 class="text-4xl font-bold text-gray-900">Edit your update</h1>
</div>
<div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8 my-4">
    <% if @update.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            There were <%= pluralize(@update.errors.count, "error") %> with your submission
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul role="list" class="list-disc pl-5 space-y-1">
              <% @update.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <% end %>
    
    <%= form_with(model: @update, class: 'space-y-8 divide-gray-200') do |form| %>
      <div class="space-y-8 divide-y divide-gray-200">
        <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
          <div class="sm:col-span-4">
            <%= form.label :project_id, "Project", class: 'block text-lg font-medium text-gray-700' %>
            <div class="mt-1">
            <% if @current_wallet.admin.present? %>
              <%= form.collection_select :project_id, Project.all.order(:name), :id, :name, {include_blank: 'Select a project'}, {class: 'shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md'} %>
            <% else %>
              <%= form.collection_select :project_id, @current_wallet.projects.where(id: @current_wallet.permissions.pluck(:project_id)).order(:name), :id, :name, {include_blank: 'Select a project'}, {class: 'shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md'} %>
            <% end %>
            </div>
          </div>

          <div class="sm:col-span-4">
            <%= form.label :title, "Title", class: 'block text-lg font-medium text-gray-700' %>
            <div class="mt-1">
              <%= form.text_field :title, class: 'shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md' %>
            </div>
          </div>

          <div class="sm:col-span-4">
            <%= form.label :body, "Body", class: 'block text-lg font-medium text-gray-700' %>
            <div class="mt-1">
              <%= form.text_area :body, rows: 3, class: 'shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md' %>
            </div>
            <p class="mt-2 text-sm text-gray-500">Markdown supported.</p>
          </div>

          <div class="sm:col-span-4">
            <%= form.label :category, "Category", class: 'block text-lg font-medium text-gray-700' %>
            <div class="mt-1">
              <%= form.select :category, ["Airdrop", "Collaborations", "Companion Drop", "Events", "Mint", "Protocol Changes", "Tokenomics", "Whitelist"],  {include_blank: 'Select a category'}, {class: 'shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md'} %>
            </div>
          </div>

          <div class="sm:col-span-4">
            <%= form.label :deadline_at, "Deadline", class: 'block text-lg font-medium text-gray-700' %>
            <div class="mt-1">
              <%= form.datetime_select :deadline_at, {}, {class: 'shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm border-gray-300 rounded-md'} %>
            </div>
            <p class="mt-2 text-sm text-gray-500">Is this time sensitive? When should it be done by?</p>
          </div>

          <div class="sm:col-span-4">
            <%= form.label :category, "Publish Time", class: 'block text-lg font-medium text-gray-700' %>
            <div class="mt-1">
              <%= form.datetime_select :publish_at, {}, {class: 'shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm border-gray-300 rounded-md'} %>
            </div>
            <p class="mt-2 text-sm text-gray-500">Select past dates to build up a historical timeline!</p>
          </div>
        </div>  
      </div>

      <div class="pt-5">
        <div class="flex justify-start">
          <%= form.submit "Update...your update", class: 'inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-lg font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500' %>
        </div>
      </div>
    <% end %>
  
</div>